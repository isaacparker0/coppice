{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended", "customManagers:githubActionsVersions"],
    "automerge": false,
    "dependencyDashboard": false,
    "enabled": true,
    "lockFileMaintenance": { "enabled": false },
    "prConcurrentLimit": 0,
    "prHourlyLimit": 0,
    "rangeStrategy": "bump",
    "rebaseWhen": "conflicted",
    "recreateWhen": "always",
    "reviewers": [],
    "semanticCommits": "disabled",
    "separateMajorMinor": true,
    "timezone": "America/New_York",
    "enabledManagers": [
        "bazelisk",
        "bazel-module",
        "cargo",
        "custom.regex",
        "github-actions",
        "gomod"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": ["multitool\\.lock\\.json$"],
            "matchStrings": [
                "\"url\":\\s*\"https://github\\.com/(?<depName>[^/]+/[^/]+)/releases/download/v?(?<currentValue>\\d+\\.\\d+\\.\\d+[^/]*)/[^\"]+"
            ],
            "datasourceTemplate": "github-releases",
            "versioningTemplate": "semver"
        }
    ],
    "packageRules": [
        {
            "matchManagers": ["bazelisk", "bazel-module"],
            "postUpgradeTasks": {
                "commands": ["bazel mod deps --lockfile_mode=update"],
                "fileFilters": ["MODULE.bazel.lock"],
                "executionMode": "branch"
            }
        },
        {
            "matchManagers": ["cargo"],
            "postUpgradeTasks": {
                "commands": ["bazel mod deps --lockfile_mode=update"],
                "fileFilters": ["MODULE.bazel.lock"],
                "executionMode": "branch"
            }
        },
        {
            "matchManagers": ["custom.regex"],
            // Renovate doesn't support naming of custom regex managers, so we
            // use `matchFileNames` to select this specific custom manager.
            // https://github.com/renovatebot/renovate/issues/21760
            "matchFileNames": ["multitool.lock.json"],
            "postUpgradeTasks": {
                "commands": [
                    ".github/update_multitool_checksums.sh {{{depName}}}"
                ],
                "fileFilters": ["multitool.lock.json"],
                "executionMode": "update"
            }
        },
        {
            "matchManagers": ["gomod"],
            "postUpgradeTasks": {
                "commands": [
                    "bazel run @rules_go//go -- mod tidy",
                    "bazel mod tidy"
                ],
                "fileFilters": ["go.mod", "go.sum", "MODULE.bazel"],
                "executionMode": "branch"
            }
        }
    ]
}
