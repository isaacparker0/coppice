{
    "$schema": "https://json.schemastore.org/language-configuration.json",
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "\"",
            "close": "\""
        }
    ],
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "comments": {
        "lineComment": "//"
    },
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^`~!@#%^&*()=+[\\]{}\\\\|;:'\\\",.<>/?\\s]+)"
}
